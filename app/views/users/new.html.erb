<h1>Make a new account</h1>

<%= form_for @user do |user| %>

	<%= user.label :name %></br> <%= user.text_field :name %></br></br>
	<%= user.label :username %></br> <%= user.text_field :username %></br></br>
	<%= user.label :password %></br> <%= user.password_field :password %></br></br>

	<%= user.submit "Creat account!" %>

<% end %>

<%= link_to "Go Back", home_path %>