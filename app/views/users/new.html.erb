<div class="new-user-header">
<h1>Glad you can join us!</h1>
</div>

<% @user.errors.messages.each do |k,v| %>

	<%= k %> : <%= v.join(",") %>

<% end %>

<%= form_for @user do |user| %>
	<div class="new-user-form-container">
	<div class="form-group">
	<%= user.label :name %> </br> <%= user.text_field :name, :class => "form-control" %>
	</div>
	<div class="form-group">
	<%= user.label :username %> </br> <%= user.text_field :username, :class => "form-control" %>
	</div>
	<div class="form-group">
	<%= user.label :password %> </br> <%= user.password_field :password, :class => "form-control" %></div>

	<%= user.submit "Create account!", :class => "btn btn-primary" %></br>
	<%= link_to "Go Back", root_path %>
	</div>
<% end %>
